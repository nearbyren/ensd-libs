<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/common_toolbar_title" />

        <TextView
            android:id="@+id/test_http"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/orange"
            android:gravity="center"
            android:text="testHttp"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/test_arouter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/orange"
            android:gravity="center"
            android:text="testARouter"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/test_file"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/orange"
            android:gravity="center"
            android:text="testFile"
            android:textColor="@color/white" />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lt_gift"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_autoPlay="false"
            app:lottie_fileName="lottie/loading.json"
            app:lottie_loop="true"
            app:lottie_repeatMode="restart" />

        <include
            android:id="@+id/empty_loading"
            layout="@layout/common_empty_loading" />

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>